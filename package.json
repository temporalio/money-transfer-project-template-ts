{
  "name": "temporal-money-transfer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "client": "ts-node src/client.ts",
    "format": "prettier --write .",
    "lint": "eslint src",
    "test": "mocha --exit --require ts-node/register --require source-map-support/register src/mocha/*.test.ts",
    "worker": "ts-node src/worker.ts",
    "worker.watch": "nodemon src/worker.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "^1.8.6",
    "@temporalio/client": "^1.8.6",
    "@temporalio/worker": "^1.8.6",
    "@temporalio/workflow": "^1.8.6",
    "@temporalio/common": "^1.8.6",
    "mocha": "^10.2.0",
    "nanoid": "3.x"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.8.6",
    "@tsconfig/node18": "^1.0.0",
    "@types/jest": "^29.5.5",
    "@types/mocha": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "jest": "^29.7.0",
    "nodemon": "^2.0.12",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
